<link rel="stylesheet" href="/stylesheets/bootstrap-multiselect.css">

<body>
    
    <h1><%= title %></h1>
    
    <% include messages %>
    
    <form class="form" id="createEventForm" action='/events/create' method='post'>

        <div class="panel panel-success">
            <div class="panel-heading">
                Datos del evento
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <paper-input name="name" label="Nombre del evento" auto-validate required="required" error-message="No puede ser vacio!"></paper-input>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <paper-textarea name="description" label="Descripcion del evento"></paper-input>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <paper-input name="date" label="Fecha del evento" type="date" auto-validate required="required" error-message="No puede ser vacio!"></paper-input>
                    </div>
                </div>

		<div class="row">
                    <div class="col-md-8 col-sm-12 col-xs-12">
                        <paper-input name="date" label="Hora del evento" type="time" auto-validate required="required" error-message="No puede ser vacio!"></paper-input>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <label>Lugar: </label>
                        <% include locationSelect %>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <label>Invitados: </label>
                        <% include memberSelect %>
                    </div>

                    <div class="col-md-3 col-sm-12 col-xs-12">
                        <label>Banda: </label>
                        <% include bandSelect %>
                    </div>
                </div>

                <hr />

                <div class="row text-center">
                    <input class="btn btn-lg btn-primary" type='submit' value='Crear!' />
                </div>
            </div>
        </div>

    
    </form>
</body>
</html>
